
@page "/menu"
@using RestaurantMS.Models
@using RestaurantMS.Services
@inject MenuService MenuService

<h1>Menu Management</h1>

@if (_menuItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button @onclick="() => _showAddEditModal = true">Add New Item</button>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _menuItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Category</td>
                    <td><img src="@item.ImageUrl" alt="@item.Name" style="width: 100px;" /></td>
                    <td>
                        <button @onclick="() => EditItem(item)">Edit</button>
                        <button @onclick="() => DeleteItem(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (_showAddEditModal)
{
    <div class="modal" tabindex="-1" style="display: block;" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(_isEditing ? "Edit Item" : "Add Item")</h5>
                    <button type="button" class="close" @onclick="() => _showAddEditModal = false">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@_currentItem" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label>Name</label>
                            <InputText @bind-Value="_currentItem.Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <InputTextArea @bind-Value="_currentItem.Description" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <InputNumber @bind-Value="_currentItem.Price" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Category</label>
                            <InputText @bind-Value="_currentItem.Category" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Image URL</label>
                            <InputText @bind-Value="_currentItem.ImageUrl" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" @onclick="() => _showAddEditModal = false">Cancel</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
