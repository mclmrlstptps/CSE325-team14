@page "/dashboard"
@attribute [Authorize(Roles = "Manager")]

<div class="container mt-4">
    <h1>Manager Dashboard</h1>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Menu Management</h5>
                    <p class="card-text">Manage your restaurant's menu items.</p>
                    <a href="/menu" class="btn btn-primary">Manage Menu</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text">View and manage incoming orders.</p>
                    <a href="/orders" class="btn btn-primary">View Orders</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">View sales reports and analytics.</p>
                    <a href="/reports" class="btn btn-primary">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>

