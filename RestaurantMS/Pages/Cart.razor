@page "/cart"
@inject CartService CartService
@inject NavigationManager Navigation

<h3 class="mb-4 text-center">Your Cart</h3>

@if (!CartService.Cart.Any())
{
    <p>Your cart is empty.</p>
    <button class="btn btn-primary mt-3" @onclick="GoToMenu">Browse Menu</button>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in CartService.Cart)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => Decrease(item)">-</button>
                        @item.Quantity
                        <button class="btn btn-sm btn-outline-secondary ms-1" @onclick="() => Increase(item)">+</button>
                    </td>
                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => Remove(item)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h5>Total: @CartService.GetTotal().ToString("C")</h5>
        <button class="btn btn-success mt-2" @onclick="Checkout">Proceed to Checkout</button>
    </div>
}

@code {
    private void Increase(OrderItem item) => CartService.IncreaseQuantity(item);
    private void Decrease(OrderItem item) => CartService.DecreaseQuantity(item);
    private void Remove(OrderItem item) => CartService.RemoveFromCart(item);

    private void Checkout() => Navigation.NavigateTo("/checkout");
    private void GoToMenu() => Navigation.NavigateTo("/welcome");
}
